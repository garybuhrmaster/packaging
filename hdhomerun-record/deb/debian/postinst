#!/bin/sh
# postinst script for hdhomerun-record
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# source debconf library
. /usr/share/debconf/confmodule

case "$1" in
  configure)

	# Add hdhomerun user/group
	if ! getent passwd hdhomerun > /dev/null ; then
	    echo 'Adding system user for HDHomeRun DVR' 1>&2
	    adduser --system --group --quiet \
	        --home /run/hdhomerun \
	        --no-create-home --disabled-login \
	        --gecos "HDHomeRun DVR server" \
	        hdhomerun
	fi

	if [ "`getent passwd hdhomerun | cut -d: -f6`" = "/var/run/hdhomerun" ]; then
		usermod -d "/run/hdhomerun" hdhomerun >/dev/null 2>/dev/null || true
	fi

	if [ -f /etc/hdhomerun.conf -a -r /etc/hdhomerun.conf -a -w /etc/hdhomerun.conf ] ; then
	    grep -q "^[[:space:]]*StorageID[[:space:]]*=[[:space:]]*" /etc/hdhomerun.conf >/dev/null || \
	    echo "\n\n# StorageID automatically added by package installation\nStorageID="`uuidgen`"\n" >>/etc/hdhomerun.conf
	fi

	test -f /usr/bin/firewall-cmd && firewall-cmd --reload --quiet

  ;;

  abort-upgrade|abort-remove|abort-deconfigure)

  ;;

  *)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
